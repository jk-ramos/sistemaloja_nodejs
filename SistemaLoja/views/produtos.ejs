<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
<div class="fundo2"> 
        <div class="tabela">
            <div class="container mt-4">
                <table class="table table-striped table-dark table-hover table-bordered table-responsive table-sm">
                    <thead>
                        <tr>
                            <th class="header-cell" scope="col"></th>
                            <th class="header-cell" scope="col">Nome Produto</th>
                            <th class="header-cell" scope="col">Pre√ßo</th>
                            <th class="header-cell" scope="col">Categoria</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(function(produto) { %>
                            <tr>
                                <td><img src="<%= produto.foto %>" alt="<%= produto.nome %>" width="50px"></td>
                                <td>
                                    <%= produto.nome %>
                                </td>
                                <td>
                                    <%= produto.preco.toLocaleString('pt-br', {style: 'currency' , currency: 'BRL' }) %>
                                </td>
                                <td>
                                    <%= produto.categoria %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include ('partials/footer.ejs')%>