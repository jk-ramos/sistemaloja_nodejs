<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>
        <div class="container">
            <div class="card">
                <div class="card-header">
                 <h1>Alterar Pedido</h1>
                    <hr>
                    <form action="/pedidos/update/<%= pedido.id %>" method="POST">
                        <label>Numero do pedido:</label>
                        <input type="text" name="numero" class="form-control" value="<%= pedido.numero %>"  required>
                        <label>Valor do pedido:</label>
                        <input type="text" name="valor" class="form-control" value="<%= pedido.valor %>"  required>
                        <label>Tipo do pedido:</label>
                        <input type="text" name="tipo" class="form-control" value="<%= pedido.tipo %>"  required>
                        <br>
                        <input type="text" name="id" value="<%= pedido.id %>">
                        <input type="submit" value="Alterar" class="btn btn-warning" onclick="return confirm('Deseja mesmo editar o pedido <%= pedido.id %>?')">
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>

        <%- include ('partials/footer.ejs') %>