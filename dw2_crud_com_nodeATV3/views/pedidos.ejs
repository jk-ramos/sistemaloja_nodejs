<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar pedido</h1>
        </div>
        <div class="card-body">
            <form action="/pedidos/new" method="POST">
                <label>Numero do pedido:</label>
                <input type="text" name="numero" placeholder="Insira o numero do pedido" class="form-control" required>
                <label>Valor do pedido:</label>
                <input type="text" name="valor" placeholder="Insira o valor do pedido" class="form-control" required>
                <label>Tipo do pedido:</label>
                <input type="text" name="tipo" placeholder="Insira o tipo do pedido" class="form-control" required>
                <br>
                <input type="submit" value="Cadastrar" class="btn btn-success">
            </form>
            <hr>
        </div>
    </div>
</div>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Pedidos</h1>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Número:</th>
                            <th>Valor:</th>
                            <th>Tipo:</th>
                            <th style="text-align: center" colspan="2">Ações:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pedidos.forEach(pedido => { %>
                        <tr>
                            <td><img src="imgs/order.png" width="30px"></td>
                            <td>
                                <%= pedido.numero %>
                            </td>
                            <td>
                                <%= pedido.valor ? pedido.valor.toLocaleString('pt-br', {style: 'currency' ,
                                            currency: 'BRL' }) : 'Preço Indisponível' %>
                            </td>
                            <td>
                                <%= pedido.tipo %>
                            </td>
                            <td><a style="color: blue;" href="/pedidos/edit/<%= pedido.id %>">EDITAR</a></td>
                            <td><a style="color: red;" href="/pedidos/delete/<%= pedido.id %>" onclick="return confirm('Deseja mesmo excluir o pedido <%= pedido.numero %>?')">EXCLUIR</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>
